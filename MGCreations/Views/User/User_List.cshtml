@model IEnumerable<MGCreations.Models.user>

@{
    ViewBag.Title = "User_List";
}


<div class="container-fluid py-4">
    <h4 class="text-center text-uppercase">User List</h4>
    <table class="table table-striped table-bordered">
        <thead class="bg-dark text-white">
            <tr>
                @Html.ActionLink("Create New User", "Register_User")
            </tr>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.User_Username)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User_FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User_LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User_Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User_ContactNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User_DOB)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User_Type)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.User_Username)
                    </td>
                   
                    <td>
                        @Html.DisplayFor(modelItem => item.User_FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User_LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User_Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User_ContactNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User_DOB)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User_Type)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Update_User", new { u_id = item.User_ID }) |
                        @Html.ActionLink("Details", "User_Details", new { u_id = item.User_ID }) |
                        @Html.ActionLink("Delete", "Delete_User", new { u_id = item.User_ID })
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
