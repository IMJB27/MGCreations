@model MGCreations.Models.product_images

@{
    ViewBag.Title = "Add_Product_Images";
    TempData.Keep("Product_ID");
    TempData.Keep("Product_Name");
}

<h2>Add New Product Images</h2>

@using (Html.BeginForm("Add_Product_Images", "ProductImages", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>product_images</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Product_ID", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.LabelFor(model => model.Product_ID, @TempData["Product_Name"].ToString(), new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Product_ID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Product_Image_Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Product_Image_Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Product_Image_Name, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.Product_Image_URL, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

            <input type="file" id="Image_Path" name="Image_Path" class="form-control" />
            @Html.ValidationMessageFor(model => model.Product_Image_URL, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.isPersonalisable, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.CheckBoxFor(model => model.isPersonalisableBool, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.isPersonalisable, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Upload" class="btn btn-default" />
        </div>
    </div>


    <div class="form-group">
        <p style="color:green"> @ViewBag.Success</p>
        <p style="color:Red">  @ViewBag.Error</p>
    </div>

</div>
}

<div>
    @Html.ActionLink("Back To Product", "Product_List", "Product")
</div>
