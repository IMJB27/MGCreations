@model MGCreations.Models.product_category

@{
    ViewBag.Title = "Update_Product_Category";
}

<h2>Update Product Category</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>product_category</h4>
    <hr />
