@model IEnumerable<MGCreations.Models.JoinModel>

@{
    ViewBag.Title = "View_Order";
    TempData.Keep();
    decimal Total = 0;
    foreach (var item in Model)
    {
        Total = item.Order.Order_TotalAmount;
    }
}
<div class="container-fluid py-4">
    <h4 class="text-center text-uppercase">Order Confirmation</h4>
    <h4 class="text-center text-uppercase">  Order Reference: @TempData["OrderReference"]</h4>

    <table class="table table-striped table-bordered">
        <thead class="bg-dark text-white">
            <tr>
                <th>Product Name</th>
                <th>Product Quantity</th>
                <th>Product Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product.Product_Name</td>
                    <td>@item.Cart.Product_Quantity</td>
                    <td>@item.Product.Product_Price</td>
                </tr>
            }
            <tr>
                <th>Order Total</th>
                <td></td>
                <td>
                    @Total
                </td>
            </tr>
        </tbody>

    </table>
    <Center><a class="btn btn-primary btn-block" href="@Url.Action("Index","Home")">Continue</a></Center>
</div>