@model IEnumerable<MGCreations.Models.delivery_address>

@{
    ViewBag.Title = "Delivery_Address_List";
}

<h2>Delivery Address List</h2>

<p>
    @Html.ActionLink("Add New Address", "Add_Delivery_Address")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Delivery_Address_Line1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Delivery_Address_Line2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Delivery_Address_City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Delivery_Address_County)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Delivery_Address_Country)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Delivery_Address_Postcode)
        </th>

        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>

    <td>
        @Html.DisplayFor(modelItem => item.Delivery_Address_Line1)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Delivery_Address_Line2)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Delivery_Address_City)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Delivery_Address_County)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Delivery_Address_Country)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Delivery_Address_Postcode)
    </td>
    @using (Html.BeginForm("Select_Delivery_Address", "DeliveryAddress", new { da_id = item.Delivery_Address_ID }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <td>
            <input type="submit" class="btn btn-default" value="Select" />
        </td>
    }
</tr>                                                                                    
}

</table>
